
<div class="container">

  <div class="col-lg-3">
    <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
      <li><a href="#/dashboard">{{'dashboard.menu.title' | t}}</a></li>
      <li><a href="#/logs">{{'dashboard.menu.logs' | t}}</a></li>
      <li class="active"><a href="#/settings">{{'dashboard.menu.settings' | t}}</a></li>
    </ul>
  </div>
  <div class="col-lg-9 ">


    <div class="page-header">
      <h1 id="type">{{'dashboard.menu.settings' | t}}</h1>
    </div>

    <div class="col-lg-9 col-lg-offset-2">
      <div class="panel panel-primary">
        <div class="panel-heading" t>Login</div>
        <div class="panel-body">
          <form ng-submit="login()" class="form-horizontal" role="form" name="logForm">
            <div class="form-group" >
              <label for="inputEmail1" class="col-lg-2 control-label" t>Email</label>
              <div class="col-lg-10">
                <input type="email" ng-model="user.email" class="form-control" id="inputEmail1" placeholder="Email" required="true" name="email">
              </div>
            </div>
            <div class="form-group" >
              <label for="inputEmail1" class="col-lg-2 control-label" t>Username</label>
              <div class="col-lg-10">
                <input type="email" ng-model="user.email" class="form-control" id="inputEmail1" placeholder="Username" required="true" name="email">
              </div>
            </div>
            <div class="form-group" >
              <label for="inputPassword1" class="col-lg-2 control-label" t>Password</label>
              <div class="col-lg-10">
                <input type="password" ng-model="user.password" class="form-control" id="inputPassword1" placeholder="Password" required="true" name="password">
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <div class="checkbox">
                  <label>
                    <input type="checkbox"> {{'Remember me' | t}}
                  </label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-default" ng-disabled="logForm.$invalid">{{'Save' | t}}</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
